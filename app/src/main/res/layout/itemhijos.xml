<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fafafa"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingStart="16dp">

    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="#D3D3D3" />

    <TextView
        android:id="@+id/nombreHijo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="12sp"
        tools:text="LÃ©on: The Professional" />

    <RelativeLayout
        android:id="@+id/sub_itemHijo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/linkimagenHijo"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/edadHijo"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/edad"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linkimagenHijo"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="100dp"
            android:layout_toEndOf="@+id/linkimagenHijo"
            android:layout_toRightOf="@+id/linkimagenHijo"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/direccion"
            android:layout_width="match_parent"
            android:layout_marginBottom="75dp"
            android:drawableLeft="@drawable/ic_add_location_black_24dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linkimagenHijo"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/linkimagenHijo"
            android:layout_toRightOf="@+id/linkimagenHijo"
            android:scaleType="centerInside"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/tiposangrehijo"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/sangre"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linkimagenHijo"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/linkimagenHijo"
            android:layout_toRightOf="@+id/linkimagenHijo"
            android:scaleType="centerInside"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/alergiahijo"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/alergia"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linkimagenHijo"
            android:layout_alignParentTop="true"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="25dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/linkimagenHijo"
            android:layout_toRightOf="@+id/linkimagenHijo"
            android:scaleType="centerInside"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/enfermedadhijo"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/enfermedad"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linkimagenHijo"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="0dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/linkimagenHijo"
            android:layout_toRightOf="@+id/linkimagenHijo"
            android:scaleType="centerInside"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18dp" />


    </RelativeLayout>

</LinearLayout>