<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarGeneral">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:background="#F4F6F7"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/datos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="18dp"
                android:fontFamily="@font/arizonia"
                android:text="Elija que datos desea actualizar"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="228dp"
                android:layout_height="209dp"
                android:contentDescription="TODO"
                android:src="@drawable/padres" />

            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="312dp"
                android:layout_height="49dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="18dp"
                android:background="#1e8449"
                android:elevation="7dp"
                android:onClick="onClickPadre"
                android:text="Padre"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />


            <ImageView
                android:layout_width="270dp"
                android:layout_height="230dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="18dp"
                android:contentDescription="TODO"
                android:src="@drawable/nino3" />

            <Button
                android:id="@+id/btnActualizarhijos"
                android:layout_width="345dp"
                android:layout_height="49dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="21dp"
                android:background="#1e8449"
                android:elevation="5dp"
                android:onClick="onClickHijo"
                android:text="Hijo"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>